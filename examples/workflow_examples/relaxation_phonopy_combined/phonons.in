# config file to control phonopy workflow
[control]
xc =               pw-lda
sc_accuracy_rho =  1e-4
charge_mix_param = 0.5
output_level =     MD_light

[control_kpt]
density =         .5

[basisset]
type = light

[socketio]
port = null

[phonopy]
supercell_matrix = [-1, 1, 1, 1, -1, 1, 1, 1, -1]
workdir =    /home/purcell/git/hilde/examples/workflow_examples/relaxation_phonopy_combined/test_run/phonons
#workdir =    /u/tpurcell/git/hilde/examples/workflow_examples/relaxation_phonopy_combined/test_run/phonons
analysis_workdir = /home/purcell/git/hilde/examples/workflow_examples/relaxation_phonopy_combined/test_run/phonons

[restart]
command = python run_phonopy.py

[fw_settings]
serial = True
in_spec_atoms = tight_relaxed_atoms
in_spec_calc = tight_relaxed_calc
from_db = True
fw_name = phonopy_test
fw_spec = null
mod_spec_add = "calculated_forces"

[fw_spec_qadapter]
walltime = 00:10:00
nodes = 5
