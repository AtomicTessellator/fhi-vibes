# information to build a default control.in
[geometry]
file = geometry.in

[general]
workdir_cluster = "test_run/"
workdir_local = "test_run/"
use_third = False
basisset = light
kgrid_dfunc_min = 1e12

[control]
xc =                 pbe
sc_accuracy_rho =    1e-6
sc_accuracy_forces = 5E-4
output_level =       MD_light
relativistic =       "atomic_zora scalar"
vdw_correction_hirshfeld = True

[control_kpt]
density = 1

[phonopy]
supercell_matrix = [-1, 1, 1, 1, -1, 1, 1, 1, -1]
walltime = 3500
serial = True
displacement = 0.01
