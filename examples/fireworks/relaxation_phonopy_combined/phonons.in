# config file to control phonopy workflow
[control]
xc =               pw-lda
sc_accuracy_rho =  1e-4
charge_mix_param = 0.5
output_level =     MD_light

[control_kpt]
density =         .5

[basisset]
type = light

[socketio]
port = null

[phonopy]
supercell_matrix = [-1, 1, 1, 1, -1, 1, 1, 1, -1]
#fireworks = True
workdir = test_run/phonopy
#analysis_workdir = test_run/phono3py

[phono3py]
supercell_matrix =  [-1, 1, 1, 1, -1, 1, 1, 1, -1]
workdir = test_run/phono3py
#fireworks = True
log_level = 2

[restart]
command = python run_phonopy.py

[fw_settings]
serial = False
in_spec_atoms = tight_relaxed_atoms
in_spec_calc = tight_relaxed_calc
from_db = True
fw_name = phonopy_test
fw_spec = null

[fw_spec_qadapter]
walltime = 00:10:00
nodes = 5
