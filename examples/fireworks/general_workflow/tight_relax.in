# information to build a default control.in
[control]
xc =                 pw-lda
sc_accuracy_rho =    1e-6
sc_accuracy_forces = 5E-4
output_level =       MD_light
relativistic =       "atomic_zora scalar"
relax_geometry =     "ltrm 7.5E-3"
relax_unit_cell =    full
basis_threshold = 1e-10

use_sym = True
scaled = True

[control_kpt]
density =         2

[basisset]
type = tight

[socketio]
port = null

[aims_relaxation]
workdir = test_run//tight_relax

[fw_settings]
from_db = True
fw_name = relaxation_tight
fw_spec = null
out_spec_atoms = tight_relaxed_atoms
out_spec_calc = tight_relaxed_calc
in_spec_atoms = light_relaxed_atoms
in_spec_calc = light_relaxed_calc
kpoint_density_spec = kgrid


