# information to build a default control.in
#[files]
#geometry = geometry.in

[calculator]
name = EMT

[calculator.kpoints]
density = 1.00

[fireworks]
name = example_run

[fireworks.workdir]
local   = "test_run/"

[relaxation]
use_ase_relax = True

[relaxation.step_1]
driver =      BFGS
fmax =        0.001
unit_cell =   True
scalar_pressure = 0.01
hydrostatic_strain = True

[phonopy]
supercell_matrix = [-1, 1, 1, 1, -1, 1, 1, 1, -1]
conv_crit = 0.95
serial = True
displacement = 0.01

[phonopy.convergence]
minimum_similiarty_score = 0.05

[phonopy.qadapter]
walltime = 1:00:00
nodes = 1

[gruneisen]
volume_factors = [0.99, 1.01]

[statistical_sampling]
serial = True
temperatures = [300]
supercell_matrix = [-1,1,1,1,-1,1,1,1,-1]
n_samples = 1
deterministic = True

[md]
driver =     Verlet
timestep =   1
maxsteps =   5
temperatures = [300]

[md.qadapter]
walltime = 1:00:00
nodes = 1

