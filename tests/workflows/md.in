[geometry]
file =             geometry.in

[control]
xc =               pw-lda
k_grid =           [2, 2, 2]
sc_accuracy_rho =  1e-4

[basissets]
default = light

[socketio]
port = 12345

[md]
driver =      Langevin
timestep =    1
temperature = 300
friction =    0.02
maxsteps =    2

[restart]
command = vibes run md

[machine]
basissetloc = species_defaults

[folders]
workdir =     md_test
